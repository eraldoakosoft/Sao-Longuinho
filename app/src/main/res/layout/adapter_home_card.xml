<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorRosa"
    android:layout_margin="8dp"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorBranco">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewFoto"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_image_black_24dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewAdapterCardTipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:id="@+id/textViewAdapterCardNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="Nome"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/textViewAdapterCardEncotrado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data Encontrado"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"/>



        </LinearLayout>




    </LinearLayout>

    <TextView
        android:id="@+id/textViewAdapterCardNomeAchou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Nome Pessoa que Achou"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/colorBlack"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/textViewAdapterCardDataPublicacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data Publicação"
            android:gravity="bottom"
            android:textColor="@color/colorBlack"
            android:layout_gravity="bottom"/>

        <TextView
            android:id="@+id/textViewVer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Ver"
            android:textSize="15sp"
            android:gravity="right"
            android:textColor="@color/colorBlack"
            />


    </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>