<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorRosa"
    android:layout_margin="8dp"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorBranco">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewAdapterCardTipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_marginRight="10sp"/>

            <TextView
                android:id="@+id/textViewAdapterCardDataPublicacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data Publicação"
                android:textColor="@color/colorBlack"
                android:textAlignment="textEnd"/>



        </LinearLayout>



        <ImageView
            android:id="@+id/imageViewFoto"
            android:layout_width="352dp"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimaryDark"/>


            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="Nome"
                android:textStyle="bold"
                android:textSize="20sp"/>

        <TextView
                android:id="@+id/textViewAdapterCardNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="Nome"
                android:textSize="18sp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data Encontrado"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
                android:id="@+id/textViewAdapterCardEncotrado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data Encontrado"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"/>




    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/longuinho"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"/>

        <TextView
        android:id="@+id/textViewAdapterCardNomeAchou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Nome Pessoa que Achou"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/colorBlack" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp">



        <TextView
            android:id="@+id/textViewVer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Mais"
            android:textSize="18sp"
            android:gravity="right"
            android:textColor="@color/colorBlack"
            />


    </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>