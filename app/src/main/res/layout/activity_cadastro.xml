<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".activities.CadastroActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:text="Crie Sua Conta Grátis"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="@color/colorBranco"/>

        <EditText
            android:id="@+id/editTextNome"
            android:hint="Nome"
            android:inputType="textPersonName"
            style="@style/caixadetexto"
            />


        <EditText
            android:id="@+id/editTextEmai"
            android:hint="Email"
            style="@style/caixadetexto"
            />

        <EditText
            android:id="@+id/editTextSenha"
            android:hint="Senha"
            android:inputType="textPassword"
            style="@style/caixadetexto"/>

        <EditText
            android:id="@+id/editTextConfirmaSenha"
            android:hint="Confirmar Senha"
            android:inputType="textPassword"
            style="@style/caixadetexto"
            />

        <EditText
            android:id="@+id/editTextCPF"
            android:hint="CPF"
            android:inputType="number"
            style="@style/caixadetexto"
            />

        <EditText
            android:id="@+id/editTextRG"
            android:hint="RG"
            android:inputType="numberSigned"
            style="@style/caixadetexto"
            />

        <TextView
            android:id="@+id/editTextDataNascimento"
            android:hint="Data Nascimento"
            android:inputType="date"
            style="@style/textview"
            />

        <EditText
            android:id="@+id/editTextNomeMae"
            android:hint="Nome da Mãe"
            android:inputType="text"
            style="@style/caixadetexto"
            />

        <EditText
            android:id="@+id/editTextTelefone"
            android:hint="Telefone"
            style="@style/caixadetexto"
            />

        <EditText
            android:id="@+id/editTextCEP"
            android:hint="CEP"
            android:inputType="phone"
            style="@style/caixadetexto"
            />

        <Button
            android:id="@+id/buttonCadastrar"
            android:text="Cadastrar"
            style="@style/button"
            />
    </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>